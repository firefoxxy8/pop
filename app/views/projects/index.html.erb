<div class="row lead" style="margin-top: 20px; margin-bottom: 30px;">
	<div class="col-md-3">
		Projects
	</div>
</div>

<table class="table table-striped table-condensed">
	<tr>
		<th class="col-md-2">Project Title</th>
		<th class="col-md-5">Description</th>
		<th class="col-md-2">Team</th>
		<th class="col-md-3">Handle</th>
	</tr>

	<% @projects.each do |p| %>
	<tr>
		<td><%= p.title %></td>
		<td><%= p.description %></td>
		<td><%= p.team %></td>
		<td><%= p.project_handle %></td>
	</tr>
	<% end %>
</table>
