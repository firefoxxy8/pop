
<div class="container">
	<div class="row">&nbsp;
	</div>
	<div class="row">
		<div class="col-md-2">
			Filter by Team:
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"><h4>Queued (<%= @projects_future.count %> projects)</h4>
		</div>
		<div class="col-md-4"><h4>In Development</h4>
		</div>
		<div class="col-md-4"><h4>Done (<%= @projects_completed.count %> projects)</h4>
		</div>

	</div>
	<div class="row">
		<div class="col-md-4">
			<% @projects_future.each do |project| %>
			<%= render :partial => "summary", :locals => {:project => project, :state => 'future'} %>
			<% end %>
		</div>
		<div class="col-md-4">
			<% @projects.each do |project| %>
			<%= render :partial => "summary", :locals => {:project => project, :state => 'current'} %>
			<% end %>
		</div>
		<div class="col-md-4">
			<% @projects_completed.each do |project| %>
			<%= render :partial => "summary", :locals => {:project => project, :state => 'completed'} %>
			<% end %>
		</div>
	</div>
</div>

<%= link_to 'New Project', new_project_path %>
