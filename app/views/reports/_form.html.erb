<%= form_for @report do |f| %>
	<% if @report.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@report.errors.count, "error") %> prevented
				this report from being updated:</h2>
		<ul>
		<% @report.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :summary %><br>
		<%= f.text_area :summary %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

