<h3>Teams</h3>

<form action="<%= new_team_path %>">
	<button type="submit" class="btn btn-default">Create New Team</button>
</form>

<p/>

<table class="table table-striped table-condensed">
	<tr>
		<th class="col-md-2">name</th>
		<th class="col-md-4">description</th>
		<th class="col-md-1" style="text-align: center">Updates</th>
		<th class="col-md-1"></th>
	</tr>

	<% @teams.each do |team| %>
	<tr>
		<td><%= link_to team.scopedName, team_path(team) %></td>
		<td><%= team.description %></td>
		<td style="text-align: center"><%= link_to pluralize( team.team_updates_count, "update"), team_path(team) %></td>
		<td><%= link_to 'Edit', edit_team_path(team) %> | <%= link_to 'Delete', team_path(team), data: {confirm: 'Are you sure?'}, method: :delete, remote: true, class: 'delete_team' %></td>
	</tr>
	<% end %>
</table>
